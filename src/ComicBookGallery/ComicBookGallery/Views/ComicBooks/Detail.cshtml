@{
    Layout = null;
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1>@ViewBag.SeriesTitle</h1>
        <div>
            @Html.Raw(ViewBag.Description)
        </div>

        @if (ViewBag.Artists.Length == 0)
        {
            <h3>No artists found!</h3>
        }
        else
        {
            <h5>Artists: </h5>
            foreach (var artist in ViewBag.Artists)
            {
                <li>* @artist</li>
            }
        }

    </div>
</body>
</html>
